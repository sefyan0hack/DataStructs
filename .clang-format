Language:        Cpp
BasedOnStyle:    Google
ColumnLimit:     100           # More lenient line length
IndentWidth:     4             # 4 spaces for indentation
TabWidth:        4
UseTab:          Never         # Always use spaces instead of tabs
BreakBeforeBraces: Allman       # Allman style brace positioning
AllowShortFunctionsOnASingleLine: Empty # Avoid putting small functions on one line
ConstructorInitializerIndentWidth: 4 # Align initializer lists properly
PointerAlignment: Left         # `int* ptr` instead of `int *ptr`
SortIncludes:    false         # Do not reorder includes
NamespaceIndentation: All      # Indent inside namespaces
AlignConsecutiveAssignments: true # Align consecutive assignments for readability
AlignOperands: true            # Align operands in multiline expressions
AllowShortIfStatementsOnASingleLine: false # Force multi-line `if` statements
BinPackArguments: false        # No bin-packing of function arguments
BinPackParameters: false       # No bin-packing of function parameters
SpacesInAngles: false          # No space between template parameters `<T>`
SpaceBeforeParens: ControlStatements # Consistent space before `if`, `for`, etc.
Cpp11BracedListStyle: true     # Modern brace style for list initialization
IncludeBlocks: Preserve        # Keep include blocks as written
IndentCaseLabels: true         # Indent case labels in switch statements
